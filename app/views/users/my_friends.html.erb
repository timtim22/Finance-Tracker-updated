<%= render 'friends/lookup' %>
<% if @friendships.size > 0 %>
    <table class="table table-stripped">
        <head>
            <tr>
             <th colspan="3" class="page-header">
              <h2> My Friends</h2>
             </th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </head>
        <tbody>
            <% @friendships.each do |friend|%>
                <tr>
                    <td><%= friend.full_name %></td>
                    <td><%= friend.email %></td>
                    <td>
                        <%= link_to "View Profile", user_path(friend), class: "btn btn-xs btn-primary" %>
                        <%= link_to "Remove Friend", friendship_path(friend), method: :delete,
                                data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <div class="r col-md-12"%>
        <p class="lead"> You do not have any friends, Please add some friends! </p>
    </div>
<% end %>